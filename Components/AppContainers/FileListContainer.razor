<div class="h-full w-full p-5 max-sm:p-4 flex flex-col justify-center items-center gap-5 max-sm:gap-4">
    <div class="h-[55%] pb-5 max-sm:pb-4 w-full flex flex-col gap-3 max-2xl:gap-2 max-sm:gap-2 overflow-y-auto">
        @for (int i = 0; i < 3; i++)
        {
            <div class="table-row py-1 px-[4%] max-2xl:px-[3%] max-sm:px-[6%] rounded-2xl shadow-md dark:shadow-lg bg-zinc-400 dark:bg-zinc-700">
                <div class="flex items-center">
                    <div class="table-cell w-[7%] max-sm:w-[10%] text-left">
                        <i class="text-[1.4rem] max-2xl:text-[1.2rem] max-sm:text-[1rem] drop-shadow-md dark:drop-shadow-lg @GetFileIconStyle(FileExts[i])"></i>
                    </div>
                    <div class="table-cell w-[77%] max-sm:w-[72%] text-left font-mono">
                        <p class="text-[1.4rem] max-2xl:text-[1.2rem] max-sm:text-[1rem] tracking-tighter">@FileNames[i]</p>
                        <p class="text-[0.95rem] max-2xl:text-[0.9rem] max-sm:text-[0.75rem] tracking-widest">@FileSizes[i] â€¢ @FileExts[i]</p>
                    </div>
                    <div class="table-cell w-[16%] max-sm:w-[18%] text-right">
                        <i 
                            class="text-[1.4rem] max-2xl:text-[1.2rem] max-sm:text-[1rem] cursor-pointer hover:text-[#26272A] dark:hover:text-white drop-shadow-md dark:drop-shadow-lg fa-solid fa-trash-can"
                            title="Delete File"
                        >
                        </i>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="h-[45%] w-full flex flex-col justify-center items-center gap-5 max-sm:gap-4">
        <div class="h-full w-full flex flex-col justify-center items-center gap-2 max-sm:gap-1">
            <p class="text-[1.3rem] max-2xl:text-[1.1rem] max-sm:text-[0.95rem]">Filename of combined ZIP file:</p>
            <input
                class="p-1 text-[1.3rem] max-2xl:text-[1.1rem] max-sm:text-[0.95rem] bg-[#F2F3F5] dark:bg-[#181818] text-[#404756] dark:text-[#ffffffa6] border border-[#AEAEAE] rounded-full font-mono w-[80%] max-sm:w-[90%] text-center focus:outline-none shadow-md dark:shadow-lg tracking-wider"
                type="text" 
                placeholder="Enter Filename..." 
            />
        </div>
        <div class="h-full w-full flex flex-col justify-center items-center gap-2 max-sm:gap-1">
            <button class="text-[1.3rem] max-2xl:text-[1.3rem] max-sm:text-[1.1rem] rounded-2xl shadow-md dark:shadow-lg bg-green-700 dark:bg-green-900 hover:bg-green-900 dark:hover:bg-green-950 disabled:bg-zinc-400 dark:disabled:bg-zinc-800 hover:ring hover:ring-green-500 dark:hover:ring-green-700 disabled:ring-transparent dark:disabled:ring-transparent text-gray-200 disabled:text-zinc-300 dark:disabled:text-zinc-600 px-6 max-sm:px-5 py-4 max-2xl:py-3 max-sm:py-3">
                <i class="mr-2 fa-solid fa-share-from-square"></i>Upload & Share
            </button>
            <div 
                class="text-[2.4rem] max-2xl:text-[2.2rem] max-sm:text-[1.8rem] cursor-pointer hover:text-[#26272A] dark:hover:text-white drop-shadow-md dark:drop-shadow-lg"
                title="Start from scratch"
            >
                <i class="fa-solid fa-arrows-rotate"></i>
            </div>
        </div>
    </div>
</div>

@code {
    public List<string> FileNames { get; set; } = ["This is a file", "a file", "This is another a new new file"];
    public List<string> FileSizes { get; set; } = ["1MB", "321KB", "23MB"];
    public List<string> FileExts { get; set; } = ["MP4", "PNG", "JPG"];
    
    private string GetFileIconStyle(string fileExtension)
    {
        Dictionary<string, string> iconStyles = new()
        {
            {"MP4,MKV,WMV,MOV,AVI,AVCHD,FLV,WEBM,MPEG,MPEG-2", "fa-solid fa-video"},
            {"JPG,JPEG,PNG,SVG,AVIF,GIF,WEBP", "fa-solid fa-image"},
            {"ZIP,RAR,TAR,GZ", "fa-solid fa-file-zipper"},
            {"TXT", "fa-solid fa-file-lines"},
            {"PDF", "fa-solid fa-file-pdf"},
            {"DOC, DOCX", "fa-solid fa-file-word"},
            {"XLS, XLSX", "fa-solid fa-file-excel"},
            {"PPT, PPTX", "fa-solid fa-file-powerpoint"}
        };
        foreach ((string extensions, string iconStyle) in iconStyles)
        {
            if (extensions.Contains(fileExtension))
            {
                return iconStyle;
            }
        }
        return "fa-solid fa-file";
    }
}